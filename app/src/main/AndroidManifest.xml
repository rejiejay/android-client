<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.rejiejay.application">

    <!-- 权限 -->
    <!--网络权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--拍照权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!--系统sd卡权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!--
        生产环境: 去掉 android:networkSecurityConfig="@xml/network_security_config"
        原因: 因为生产环境是HTTPS
    -->
    <application
        android:networkSecurityConfig="@xml/network_security_config"
        tools:replace="android:theme"
        android:allowBackup="true"
        android:icon="@mipmap/portrait"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/portrait_round"
        android:supportsRtl="true"
        android:theme="@style/MyFullScreenTheme">

        <activity android:name=".MainActivity">

            <!-- 设置整个应用启动的第一个Activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SelectTabActivity" /><!-- 标签 记录列表 过滤 -->
        <activity android:name=".SelectDateActivity" /><!-- 日期 记录列表 过滤 -->
        <activity android:name=".RecordEventActivity" /><!-- 记录 新增 编辑 -->
        <activity android:name=".TaskActivity" /><!-- 任务 详情 -->
    </application>

</manifest>