<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!--排序与分类操作-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_corner"
        android:orientation="vertical">

        <!--顶部操作部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
                android:id="@+id/main_record_sequence"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/record_operating_sort"
                android:textColor="@color/dark3"
                android:textSize="14sp" />

            <View
                android:layout_width="1px"
                android:layout_height="1px"
                android:layout_weight="1"
                android:visibility="invisible" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:orientation="horizontal">

                <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
                    android:id="@+id/main_record_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/record_operating_tab"
                    android:textColor="@color/dark3"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:background="@color/dark2" />

                <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
                    android:id="@+id/main_record_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/record_operating_date"
                    android:textColor="@color/dark3"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dark2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
                    android:id="@+id/add_record_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/record_operating_add_record"
                    android:textColor="@color/dark3"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@color/dark2" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
                    android:id="@+id/add_event_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/record_operating_add_event"
                    android:textColor="@color/dark3"
                    android:textSize="14sp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <!--列表-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_item"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/record_Item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/img_des" />

        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:singleLine="true"
            android:text="@string/record_list_test_title"
            android:textColor="@color/dark2"
            android:textSize="16sp" />

        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/record_list_test_content"
            android:textColor="@color/dark3"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">


            <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/record_list_test_tab"
                android:textColor="@color/dark3"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_weight="0"
                android:contentDescription="@string/img_des"
                android:src="@drawable/ic_del" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_item"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/record_Item_img2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/img_des" />

        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/record_list_test_cause"
            android:textColor="@color/dark3"
            android:textSize="14sp" />

        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/record_list_test_handle"
            android:textColor="@color/dark3"
            android:textSize="14sp" />

        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/record_list_test_result"
            android:textColor="@color/dark3"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">


            <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/record_list_test_date"
                android:textColor="@color/dark3"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_weight="0"
                android:contentDescription="@string/img_des"
                android:src="@drawable/ic_del" />

        </LinearLayout>


    </LinearLayout>


    <!--列表-->
    <cn.rejiejay.application.component.AutoHeightListView
        android:id="@+id/record_event_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


</LinearLayout>