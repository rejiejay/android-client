<?xml version="1.0" encoding="utf-8"?><!-- 标签分类页面下面的一个item，定义数据的布局方式，也就是数据的View -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical"
    >

    <!-- 顶部面板 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner"
        android:gravity="center|start"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:layout_marginBottom="16dp"
        >

        <!-- 标题 -->
        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/dark3" 
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            />

        <!-- 初衷 简介版 -->
        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark3" 
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            />

        <!-- 指导思想 按钮 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dark3"
            />
        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:textColor="@color/dark3"
            android:textSize="14sp" 
            android:text="@string/task_detail_thought_btn"
            />
        <!-- 总体计划 按钮 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dark3"
            />
        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="@string/task_detail_design_btn"
            android:textColor="@color/dark3"
            android:textSize="14sp" 
            />

    </LinearLayout>

    
    <!-- 正在执行的任务 -->
    <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_detail_on_going_tasks"
        android:textSize="16sp"
        android:textColor="@color/dark3" 
        android:paddingBottom="8dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner"
        android:gravity="center|start"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        >

        <!-- 任务标题 -->
        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="@string/task_detail_design_btn"
            android:textColor="@color/dark3"
            android:textSize="16sp" 
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dark3"
            />

        <!-- 任务具体 -->
        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark3" 
            android:textSize="14sp"
            android:text="@string/task_detail_design_btn"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dark3"
            />

        <!-- 衡量标准 -->
        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark3" 
            android:textSize="14sp"
            android:text="@string/task_detail_design_btn"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dark3"
            />

        <!-- 时间跨度；角度；相关性； -->
        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark3" 
            android:textSize="14sp"
            android:text="@string/task_detail_design_btn"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dark3"
            />

        <!-- 是否确切时间 -->
        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark3" 
            android:textSize="14sp"
            android:text="@string/task_detail_design_btn"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dark3"
            />

        <!-- 是否必定完成 -->
        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark3" 
            android:textSize="14sp"
            android:text="@string/task_detail_design_btn"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dark3"
            />

        <!-- 结论 -->
        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark3" 
            android:textSize="14sp"
            android:text="@string/task_detail_design_btn"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dark3"
            />

        <!-- 完成按钮 -->
        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="@string/task_detail_complete"
            android:textColor="@color/dark3"
            android:textSize="16sp" 
            />

    </LinearLayout>


</LinearLayout>
