<?xml version="1.0" encoding="utf-8"?><!-- 标签分类页面下面的一个item，定义数据的布局方式，也就是数据的View -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dark2" />

    <RelativeLayout
        android:id="@+id/tab_item_main"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff">

        <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
            android:id="@+id/tab_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="@string/tab_select_all"
            android:textColor="@color/dark2"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/tab_add_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/img_des"
            android:src="@drawable/ic_right_arrow" />

        <ImageView
            android:id="@+id/tab_del_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/img_des"
            android:src="@drawable/ic_del"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>
